input(type="checkbox", name="article", style="display:none", value="#{item.id}", id="bookmark-#{item.id}")
label(for="bookmark-#{item.id}")
	div.bookmark-content
		if item.favorite
			span.entypo &#9733; 
		if item.archive
			span.entypo &#128230; 
		span.bookmark-title #{item.article.title} 
		span.bookmark-domain #{item.article.domain}
		if (item.tags.length > 0)
		div.bookmark-tags
			each tag in item.tags
				span.tag #{tag.text}

	div.bookmark-buttons
		a.btn.btn-small(href="#{item.article.url}",target="_blank") View article
